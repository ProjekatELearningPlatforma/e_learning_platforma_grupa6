@model IEnumerable<E_Learning_Platforma.Models.SchoolModel>
@foreach (var item in Model)
{
  <div class="col-md-12" id="schools">
    <div class="card my-3">
      <div class="row no-gutters">
        <div class="col-md-12">
          <div class="card-body" id="card-content">
            <h6 class="card-text name">@item.SchoolName</h6>
            <h6 class="card-title">@item.SchoolDescription</h6>
            <h6 class="card-text"><a href="@item.SchoolCourseLinkOne" target="_blank">Course 1</a></h6>
            <h6 class="card-text"><a href="@item.SchoolCourseLinkTwo" target="_blank">Course 2</a></h6>
            <h6 class="card-text"><a href="@item.SchoolCourseLinkThree" target="_blank">Course 3</a></h6>            
            <div class="w-100">
              <a class="btn btn-primary" asp-route-Id="@item.SchoolId" asp-action="EditSchool">Edit</a>
              <a class="btn btn-danger" asp-action="DeleteSchool" onclick="return confirm(
                'Are You Sure You Want To Delete This Course' : @item.SchoolName)" asp-route-Id="@item.SchoolId">Delete</a>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
}
